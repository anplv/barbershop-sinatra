<% @results %>

<table class="table table-striped">
  <% @results.each do |row| %>
<thead>
    <tr>
        <th>Имя</th>
        <th>Телефон</th>
        <th>Дата записи</th>
        <th>Парикмахер</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= row["Name"] %></td>
        <td><%= row["Phone"] %></td>
        <td><%= Time.parse(row["Recording_date"]).strftime('%d-%m-%Y в %I:%M') %></td>
        <td><%= row["Barber"] %></td>
    </tr>
  <% end %>
  </tbody>
  
</table>
